{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "public/*"
    ],
    "compilerOptions": {
        "sourceMap": true,
        "isolatedModules": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "svelte",
            "node",
            "chrome"
        ]
    }
}