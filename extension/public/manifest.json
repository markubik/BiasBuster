{
    "name": "Hackathon",
    "description": "Hackathon",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "/icons/scale-icon.png",
        "32": "/icons/scale-icon.png",
        "48": "/icons/scale-icon.png",
        "128": "/icons/scale-icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "build/content_script.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "tabs"
    ]
}